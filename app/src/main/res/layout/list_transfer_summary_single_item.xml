<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView style="@style/tableCard"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp8"
    app:contentPaddingBottom="@dimen/dp25"
    app:contentPaddingTop="@dimen/dp25"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/tv_item_id"
            android:fontFamily="@font/open_sans"
            android:text="01-XS657WR"
            android:textAlignment="center"
            android:textColor="#A6000000"
            android:textSize="@dimen/sp14" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans"
            android:text="XXXX"
            android:autoSizeTextType="uniform"
            android:maxLines="2"
            android:autoSizeMaxTextSize="@dimen/sp14"
            android:autoSizeMinTextSize="@dimen/sp8"
            android:autoSizeStepGranularity="@dimen/dp1"
            android:id="@+id/tv_item_name"
            android:textAlignment="center"
            android:textColor="#A6000000"
            android:textSize="@dimen/sp14" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/open_sans"
            android:text="20 Ea"
            android:id="@+id/tv_item_qty"
            android:textAlignment="center"
            android:textColor="#A6000000"
            android:textSize="@dimen/sp14" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/iv_delete"
            android:src="@drawable/ic_fi_rr_trash" />


    </LinearLayout>


</com.google.android.material.card.MaterialCardView>
