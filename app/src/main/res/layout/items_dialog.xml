                            android:layout_marginTop="@dimen/dp3"
                            android:text="15 ML"
                            android:paddingVertical="0.5dp"
                            android:paddingHorizontal="@dimen/dp4"
                            android:textSize="12sp"
                            android:fontFamily="@font/open_sans_light_italic"
                            android:background="@drawable/catg"/>



                    </LinearLayout>



                </LinearLayout>




