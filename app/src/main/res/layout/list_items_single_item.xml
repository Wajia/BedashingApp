<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="@dimen/dp3"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    app:contentPadding="@dimen/dp15"


    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/carton_bg"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingStart="@dimen/dp10"
            >



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="@dimen/dp5"
                    android:layout_weight="1"
                    android:id="@+id/tv_item_name"
                    android:maxLines="2"
                    android:layout_gravity="center_vertical"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="@dimen/sp13"
                    android:autoSizeMinTextSize="@dimen/sp8"
                    android:autoSizeStepGranularity="@dimen/dp1"
                    android:text="Opi gel HK Apples Tall"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/sp13"
                    android:fontFamily="@font/open_sans"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_item_code"
                    android:layout_gravity="center_vertical"
                    android:gravity="end"
                    android:text="ITM-00196"
                    android:paddingVertical="0.5dp"
                    android:paddingHorizontal="@dimen/dp5"
                    android:textSize="11sp"
                    android:fontFamily="@font/open_sans_light_italic"
                    android:background="@drawable/catg"/>




            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/dp10"
                    android:text="XX In-Stock"
                    android:textColor="#E25725"
                    android:textSize="@dimen/sp13"
                    android:fontFamily="@font/open_sans"
                    />

                <View
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:background="@drawable/round_bullet"
                    android:layout_gravity="center_vertical" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp10"
                    android:text="DD/MM/YY"
                    android:textColor="#555555"
                    android:textSize="@dimen/sp13"
                    android:fontFamily="@font/open_sans_light_italic"
                    />

            </LinearLayout>





        </LinearLayout>



    </LinearLayout>




</com.google.android.material.card.MaterialCardView>