<com.google.android.material.card.MaterialCardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/tableCard"
    android:layout_marginBottom="@dimen/dp8"
    app:contentPaddingTop="@dimen/dp25"
    app:contentPaddingBottom="@dimen/dp25"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">


        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:id="@+id/iv_action"
            android:src="@drawable/ic_checked"
            android:layout_gravity="center_vertical"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.3"
            android:id="@+id/tv_bin_id"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="@dimen/sp14"
            android:autoSizeMinTextSize="@dimen/sp8"
            android:autoSizeStepGranularity="@dimen/dp1"
            android:textAlignment="center"
            android:text="Bin-01"
            android:textColor="#A6000000"
            android:fontFamily="@font/open_sans"
            android:textSize="@dimen/sp14"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/tv_bin_available_qty"
            android:autoSizeTextType="uniform"
            android:autoSizeMaxTextSize="@dimen/sp14"
            android:autoSizeMinTextSize="@dimen/sp8"
            android:autoSizeStepGranularity="@dimen/dp1"
            android:textAlignment="center"
            android:text="XX"
            android:textColor="#A6000000"
            android:fontFamily="@font/open_sans"
            android:textSize="@dimen/sp14"/>




        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="20 Ea"
            android:id="@+id/et_picked_qty"
            android:layout_weight="1"
            android:inputType="number"
            android:textColor="#A6000000"
            android:background="@drawable/editext_border"
            android:paddingBottom="@dimen/dp4"
            android:textSize="14sp"
            android:fontFamily="@font/open_sans"
            android:gravity="center"
            android:textColorHint="@color/colorHint"
            />




    </LinearLayout>



</com.google.android.material.card.MaterialCardView>