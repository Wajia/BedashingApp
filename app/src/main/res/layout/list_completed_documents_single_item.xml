<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="14dp"
    android:background="@drawable/list_documents_bg"
    android:orientation="horizontal"
    android:paddingLeft="15dp"
    android:paddingTop="12dp"
    android:paddingRight="15dp"
    android:paddingBottom="15dp"
    android:weightSum="2">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:background="@drawable/document_icon_bg" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.60"
        android:orientation="vertical"
        android:paddingStart="10dp"
        android:paddingLeft="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingExtra="2dp"
            android:paddingVertical="1dp"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Goods Receiving - PO"
            android:id="@+id/tv_docType"
            android:textColor="@color/colorDark"
            android:textSize="14sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-3dp"
            android:id="@+id/tv_docID"
            android:fontFamily="@font/open_sans"
            android:text="PO-131313131"
            android:lineSpacingExtra="2dp"
            android:textColor="@color/colorDark"
            android:textSize="12sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/open_sans_light_italic"
            android:lineSpacingExtra="6dp"
            android:id="@+id/tv_docDateDB"
            android:text="29/08/2021 - 12:08 PM"
            android:textColor="@color/teal_700"
            android:textSize="10sp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.4"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/iv_status"
            android:visibility="gone"
            android:src="@drawable/ic_baseline_done_outline_24"/>

        <ProgressBar
            android:layout_width="35dp"
            android:layout_height="@dimen/dp_35"
            android:indeterminateTint="@color/teal_700"
            android:id="@+id/progress_bar"
            />

    </LinearLayout>

</LinearLayout>

