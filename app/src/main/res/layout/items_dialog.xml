    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical"
        android:background="@color/colorWhite">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorDark"
            android:padding="15dp"
            android:id="@+id/tv_heading"
            android:fontFamily="@font/open_sans_semibold"
            android:textSize="16sp"
            android:text="Please select an item"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@id/tv_heading"
            android:layout_gravity="center_horizontal"
            android:id="@+id/view_line"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp"
            android:background="@color/colorBlack">
        </View>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_line"
            android:hint="Search here.."
            android:id="@+id/et_search"
            android:layout_marginHorizontal="10dp"
            android:paddingHorizontal="18dp"
            android:drawableRight="@drawable/ic_fi_rr_search"
            android:paddingVertical="15dp"
            android:textColorHint="#555555"
            android:textColor="@color/colorDark"
            android:fontFamily="@font/open_sans_light"
            android:textSize="15sp"
            android:background="@drawable/barcode_field_bg"/>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/et_search"
            android:layout_marginHorizontal="@dimen/dp10">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/dp18">


            <com.google.android.material.card.MaterialCardView
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="@dimen/dp3"
                app:cardPreventCornerOverlap="true"
                app:cardUseCompatPadding="true"
                app:contentPadding="@dimen/dp15"
                android:layout_marginBottom="@dimen/dp5"

                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="52dp"
                        android:layout_height="52dp"
                        android:src="@drawable/carton_bg"
                        android:layout_gravity="center_vertical"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center_vertical"
                        android:paddingStart="@dimen/dp10">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Opi gel HK Apples Tall"
                                android:textColor="@color/colorPrimary"
                                android:textSize="@dimen/sp14"
                                android:fontFamily="@font/open_sans"/>




                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="center_vertical"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginRight="@dimen/dp10"
                                android:text="XX In-Stock"
                                android:textColor="#E25725"
                                android:textSize="@dimen/sp13"
                                android:fontFamily="@font/open_sans"
                                android:layout_gravity="center_vertical"/>

                            <View
                                android:layout_width="4dp"
                                android:layout_height="wrap_content"
                                android:background="@drawable/round_bullet"
                                android:layout_gravity="center_vertical" />



                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/dp10"
                                android:text="DD/MM/YY"
                                android:textColor="#555555"
                                android:textSize="@dimen/sp13"
                                android:fontFamily="@font/open_sans_light_italic"
                                android:layout_gravity="center_vertical"/>

                        </LinearLayout>

                        <TextView
